INITIATE MACRO
;INITIATE THE PROGRAM
 PUSH DS    ;INITIATE THE PROGRAM, CHANGE THESE LINES TO A MACRO
 XOR AX,AX
 PUSH AX
 MOV AX,DATA_SEG
 MOV DS,AX  ;INITIATE 
ENDM

PRINTSTRING MACRO STRING
; AH->9
 MOV DX,OFFSET STRING
 MOV AH,9
 INT 21H
ENDM

PRINTCHAR MACRO CHAR
; AH->2
 MOV AH,02
 MOV DL,CHAR
 INT 21H
ENDM

READSTRING MACRO STRING
; AH->0AH
MOV AH,0AH 
 LEA DX,STRING
 INT 21H
ENDM

READCHAR MACRO CHAR
; AH->1
MOV AH,1   
INT 21H
ENDM
 